
<!-- Units index view -->
<h1>Active Units in GCPD</h1>
<% if @active_units.present? %>
  <% @active_units.each do |unit| %>
    <h2><%= link_to unit.name, unit %></h2>
    <p>Headquarters: <%= unit.name %></p>
    <p>
      <%= unit.name %> - <%= unit.active? ? 'Yes' : 'No' %>
    </p>
  <% end %>
<% else %>
  <p>There are no active officers currently in this unit</p>
<% end %>
