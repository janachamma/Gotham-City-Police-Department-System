<h1>New Criminal</h1>

<%= form_with(model: @criminal, local: true) do |form| %>
  <% if @criminal.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@criminal.errors.count, "error") %> prohibited this criminal from being saved:</h2>
      <ul>
      <% @criminal.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Include form fields for first_name, last_name, aka, convicted_felon, enhanced_powers -->

  <div class="field">
    <%= form.label :first_name %>
    <%= form.text_field :first_name %>
  </div>
  
  <div class="field">
  <%= form.label :last_name %>
  <%= form.text_field :last_name %>
</div>

  <div class="field">
  <%= form.label :aka, 'AKA' %>
  <%= form.text_field :aka %>
</div>
<div class="form-group">
<%= form.label :convicted_felon %>
<%= form.check_box :convicted_felon %>
</div>


<div class="form-group">
<%= form.label :enhanced_powers %>
<%= form.check_box :enhanced_powers %>
</div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
